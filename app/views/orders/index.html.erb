 <div class="container">
    <div class="row">
        <div class="col-md-12">
            <legend>Orders</legend>
        </div>
    </div>
		<div class="row">
	    <div class="col-md-12">
    <table class="table table-responsive table-hover table-bordered">
    <thead>
        <th> Id</th>
        <th> Customer Name</th>
        <th> Total</th>
    </thead>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.name %></td>
        <td><%= order.total %></td>
      </tr>  
    <% end %>
  </table>
  <%= button_to "Cancle Order",orders_path(@order),method: :get,class:"btn btn-primary btn-block"%>
	    </div>
	</div>
</div> 
