 <div class="container">
    <div class="row">
        <div class="col-md-12">
            <legend>Orders</legend>
        </div>
    </div>
		<div class="row">
	    <div class="col-md-12">
    <table class="table table-responsive table-hover table-bordered">
    <thead>
        <th> Id</th>
        <th> Customer Name</th>
        <th> Product</th>
    </thead>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.name %></td>
        <td><%= order.total %></td>
        
      </tr>  
      <td style="width:30px"> <%= button_to "Oder Place",order_path(order),method: :get,class:"btn btn-primary btn-block"%> </td>
    <% end %>
  </table>
  
	    </div>
	</div>
</div> 
